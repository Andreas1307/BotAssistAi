{% comment %}
  BotAssist Chatbot App Embed
{% endcomment %}

<script>
fetch('https://api.botassistai.com/public/get-api-key?shop={{ shop.permanent_domain }}')
  .then(res => res.json())
  .then(({ apiKey }) => {
    if (!apiKey) return;

    window.BOTASSIST_API_KEY = apiKey;
    window.BOTASSIST_SHOP = "{{ shop.permanent_domain }}";

    const s = document.createElement("script");
    s.src = "{{ 'chatbot-loader.js' | asset_url }}";
    s.defer = true;
    document.body.appendChild(s);
  });
</script>





{% schema %}
{
  "name": "BotAssist Chatbot",
  "target": "body",
  "settings": [
    {
      "type": "text",
      "id": "welcome_message",
      "label": "Welcome message",
      "default": "Hi! How can I help you?"
    },
    {
      "type": "color",
      "id": "chatbot_background",
      "label": "Chatbot Background Color",
      "default": "#092032"
    }
  ]
}
{% endschema %}
