{% comment %}
  BotAssist Chatbot App Embed
{% endcomment %}

{% if shop.metafields.botassist.api_key != blank %}
  <script
    src="{{ 'chatbot-loader.js' | asset_url }}?apiKey={{ shop.metafields.botassist.api_key }}&shop={{ shop.permanent_domain }}"
    defer
  ></script>
{% else %}
  <script>console.error("‚ùå BotAssist API key missing for this shop")</script>
{% endif %}

{% schema %}
{
  "name": "BotAssist Chatbot",
  "target": "body",
  "settings": [
    {
      "type": "text",
      "id": "welcome_message",
      "label": "Welcome message",
      "default": "Hi! How can I help you?"
    },
    {
      "type": "color",
      "id": "chatbot_background",
      "label": "Chatbot Background Color",
      "default": "#092032"
    }
  ]
}
{% endschema %}
